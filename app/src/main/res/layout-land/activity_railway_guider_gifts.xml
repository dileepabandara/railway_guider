<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightWhite"
    tools:context="dev.dileepabandara.railwayguider.User.RailwayGuiderGifts">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12sp"
            android:layout_marginTop="12sp"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/icon_home" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-black"
            android:text="Gifts Cards"
            android:textColor="@color/font_colorDark"
            android:textSize="22sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="163dp"
                android:layout_height="111dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="@string/gift_about"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="@string/gift_about2"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="247dp"
            android:layout_height="196dp"
            android:src="@drawable/activity_gifts_1"
            tools:layout_editor_absoluteX="413dp"
            tools:layout_editor_absoluteY="70dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="362dp">

        <Button
            android:id="@+id/searchCard"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/design_button"
            android:fontFamily="sans-serif-medium"
            android:text="Search Card"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/design_button3"
            android:fontFamily="sans-serif-medium"
            android:text="@string/btn_send_card"
            android:onClick="onClickSendGiftCards"
            android:textAllCaps="false"
            android:textColor="@color/font_colorDark"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>